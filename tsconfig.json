{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true
  },
  "include": ["*.ts", "shared/**/*.ts", "merchant/**/*.ts", "guardian/**/*.ts", "sdk/**/*.ts"]
}
